description="The Shared Mime Info package contains a MIME database."
url="http://freedesktop.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=shared-mime-info
version=1.12
makedepends=(libxml2 intltool glib)
source=(https://gitlab.freedesktop.org/xdg/$name/uploads/80c7f1afbcad2769f38aeb9ba6317a51/$name-$version.tar.xz)

build() {
unset MAKEFLAGS
cd $name-$version
export ac_cv_func_fdatasync=no
./configure --prefix=/usr --disable-update-mimedb
make -j1
make DESTDIR=$PKG install
} 
