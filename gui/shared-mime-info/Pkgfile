description="The Shared Mime Info package contains a MIME database."
url="http://freedesktop.org/"

packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

makedepends=(libxml2 intltool glib itstool)

name=shared-mime-info
version=1.15

source=(https://gitlab.freedesktop.org/xdg/shared-mime-info/uploads/b27eb88e4155d8fccb8bb3cd12025d5b/shared-mime-info-$version.tar.xz)
build() {
unset MAKEFLAGS
cd $name-$version
export ac_cv_func_fdatasync=no
./configure --prefix=/usr --disable-update-mimedb
make -j1
make DESTDIR=$PKG install
} 
