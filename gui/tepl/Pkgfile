description="Library that eases the development of GtkSourceView based Apps"
url="https://wiki.gnome.org/Projects/Tepl"

packager="tnut <tnut@nutyx.org>"

makedepends=(amtk gtksourceview4 uchardet
             gobject-introspection gtk-doc vala)

name=tepl
version=4.4.0

source=(https://download.gnome.org/sources/$name/${version:0:3}/$name-$version.tar.xz)

build() {
cd $name-$version
./configure --prefix=/usr
make
make DESTDIR=$PKG install
}
