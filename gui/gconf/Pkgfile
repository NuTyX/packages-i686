description="A configuration database system used by many Gnome applications"
url="http://www.gnome.org/"

packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

makedepends=(dbus-glib intltool libxml2 gobject-introspection gtk3 polkit gtk-doc)

name=gconf
version=3.2.6
release=8

source=(https://download.gnome.org/sources/GConf/${version%.*}/GConf-$version.tar.xz
		gconf-merge-schema)

build() {

cd GConf-$version
./configure --prefix=/usr \
--sysconfdir=/etc \
--disable-static \
--disable-orbit
make 
make DESTDIR=$PKG install
ln -s gconf.xml.defaults $PKG/etc/gconf/gconf.xml.system
cd ..
install -m755 gconf-merge-schema $PKG/usr/bin/

# Obsolets libs
rm $PKG/usr/lib/GConf/2/libgconfbackend-oldxml.la
rm $PKG/usr/lib/GConf/2/libgconfbackend-xml.la
rm $PKG/usr/lib/gio/modules/libgsettingsgconfbackend.la
rm $PKG/usr/lib/libgconf-2.la

}
uptodate(){
local latest lastversion url
url="https://download.gnome.org/sources/GConf"
latest="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$url/?C=N\;O=D|grep [0-9]/$|head -1`"
lastversion="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$latest/?C=N\;O=D|grep LATEST|grep [0-9]$|cut -d "-" -f3`"
echo "$lastversion"
}
