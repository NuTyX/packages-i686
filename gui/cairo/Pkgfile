description="Cairo is a 2D graphics library with support for multiple output devices."
url="https://www.cairographics.org/"

packager="tnut <tnut@nutyx.org>"
contributors="Pierre B, Rems"

makedepends=(lzo libpng glib xorg-pixman xorg-fontconfig xcb-util
             xorg-libxrender xorg-libxxf86vm)

name=cairo
version=1.17.2+f93fc72c03e

source=(http://anduin.linuxfromscratch.org/BLFS/cairo/cairo-$version.tar.xz)

build() {
cd $name-$version
./configure --prefix=/usr \
            --disable-static \
	    --enable-tee
make
make DESTDIR=$PKG install
rm $PKG/usr/lib/*.la
rm $PKG/usr/lib/cairo/*.la
} 
uptodate() {
local url ext

url="https://www.cairographics.org/releases/"
ext=".tar.xz"
lynx -read_timeout=20 -dump -listonly -nonumbers \
$url|grep $name-[0-9]|grep $ext$|sed "s@$url$name-@@"|sed "s@$ext@@"|tail -1
}
