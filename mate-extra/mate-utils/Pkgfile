# Depends on: gtk-doc yelp-tools gtk3 mate-panel libgtop librsvg

description="Common MATE utilities for viewing disk usage"
url="https://mate-desktop.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Fanch, Tnut, Jayce, Greg"

name=mate-utils
version=1.22.1-git

# source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)
source=(mate-utils-1.22.1-configure-1.patch)
build() {

  unset MAKEFLAGS
  git clone https://github.com/mate-desktop/$name $name-$version 
  cd $name-$version
  patch -Np1 -i ../mate-utils-1.22.1-configure-1.patch
 
  rm -r gsearchtool/help/pt

 ./autogen.sh \
          --prefix=/usr \
          --libexecdir=/usr/lib/${name} \
          --sysconfdir=/etc \
          --disable-maintainer-flags
  make
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make DESTDIR=$PKG install

  # Obsolet lib
  rm $PKG/usr/lib/libmatedict.la
  
}

uptodate() {
feed=https://github.com/mate-desktop/$name/releases.atom
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
$exec $feed | grep release | grep title | head -1 | \
sed -e "s@ @@g" -e "s@<title>$name@@" -e "s@release</title>@@"
}
