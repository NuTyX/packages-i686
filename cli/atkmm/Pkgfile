description="Atkmm is the official C++ interface for the ATK accessibility toolkit library."
url="http://gtkmm.sourceforge.net/"

contributors="Pierre B, Rems"
packager="tnut <tnut@nutyx.org>"

makedepends=(atk glibmm libsigc++)

name=atkmm
version=2.28.0

source=(https://ftp.gnome.org/pub/gnome/sources/$name/${version:0:4}/$name-$version.tar.xz)

package() {
rm $PKG/usr/lib/libatkmm-1.6.la
}

uptodate(){
local latest lastversion url
url="https://ftp.gnome.org/pub/gnome/sources/$name"
latest="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$url/?C=N\;O=D|grep [0-9]/$|head -1`"
lastversion="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$latest/?C=N\;O=D|grep LATEST|grep [0-9]$|cut -d "-" -f3`"

echo "$lastversion"
}
