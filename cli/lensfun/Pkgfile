description="database of photographic lenses and a library that allows advanced access to the database"
url="http://lensfun.berlios.de"

packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

makedepends=(cmake glib libpng doxygen python-docutils)

name=lensfun
version=0.3.95
release=3

source=(https://sourceforge.net/projects/$name/files/$version/$name-$version.tar.gz
	)
build(){
cd $name-$version
mkdir build
cd build
cmake .. -DCMAKE_INSTALL_PREFIX=/usr \
 -DBUILD_DOC=on \
  -Wno-dev
make
make docs
make DESTDIR=$PKG install
} 
