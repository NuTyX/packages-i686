description="The libgudev package contains GObject bindings for libudev."
url="http://www.codeforge.com/s/0/libgudev"
packager="tnut <tnut@nutyx.org>"
contributors="Fanch"

makedepends=(glib gobject-introspection gtk-doc)

name=libgudev
version=233

source=(https://download.gnome.org/sources/libgudev/$version/libgudev-$version.tar.xz)
build() {
cd ${name}-$version

./configure --prefix=/usr \
--disable-umockdev
make
make DESTDIR=$PKG install

# Obsolet lib
rm $PKG/usr/lib/libgudev-1.0.la
}
uptodate(){
local latest lastversion url
url="https://download.gnome.org/sources/$name"
latest="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$url/?C=N\;O=D|grep [0-9]/$|head -1`"
lastversion="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$latest/?C=N\;O=D|grep LATEST|grep [0-9]$|cut -d "-" -f3`"
echo "$lastversion"
}
