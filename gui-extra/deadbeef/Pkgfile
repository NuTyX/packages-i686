description="A GTK+ audio player for GNU/Linux"
url="http://deadbeef.sourceforge.net"
contributors="Pierre B, Greg"
packager="tnut <tnut@nutyx.org>"

name=deadbeef
version=1.8.1
makedepends=(intltool perl-xml-parser desktop-file-utils gtk3
             x264 flac libmad glib librsvg libcaca
             alsa-lib xorg-libxinerama xorg-libxpm libvpx libcdio vcdimager
             live libdvdcss libdvdread libdvdnav libogg libtheora
             lame jansson faac libvorbis ffmpeg faad2 liba52 libmpeg2
             libmpcdec fribidi libdv speex pulseaudio)

run=(desktop-file-utils)
PKGMK_KEEP_SOURCES="no"

source=(https://github.com/DeaDBeeF-Player/deadbeef/archive/$version.tar.gz)

build () {
  cd $name-$version
  ./autogen.sh
  ./configure --prefix=/usr --disable-ffmpeg --enable-gtk3
  make 
  make DESTDIR=$PKG install
}
