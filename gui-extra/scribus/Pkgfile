# Depends on: icu cmake boost aspell cups qttools qtdeclarative gnutls kerberos boost ghostscript lcms libxml2 cairo desktop-file-utils shared-mime-info poppler

description="Desktop publishing software"
url="http://www.scribus.net"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=scribus
version=1.5.5_pre20190124
release=2

run=(shared-mime-info)
source=(https://github.com/scribusproject/scribus/archive/1ed85778dd55bcbcfad2bbc276fd4c97f43ad965.tar.gz)

build() {
	cd $name-1ed85778dd55bcbcfad2bbc276fd4c97f43ad965
	mkdir build
	cd build
	cmake ../ -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_SKIP_RPATH=ON \
                -DLIB_SUFFIX=""
	make
	make DESTDIR=$PKG install
	install -Dm644 ../scribus.desktop \
	$PKG/usr/share/applications/scribus.desktop
}
