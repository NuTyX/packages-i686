description="IceWM is a window manager with the goals of speed, simplicity"

packager="tnut <tnut@nutyx.org>"
url="www.icewm.org"

makedepends=(xorg-libxpm xorg-server xorg-fontconfig gdk-pixbuf fribidi)

name=icewm
version=1.8.1
release=5

source=(https://github.com/ice-wm/$name/releases/download/$version/$name-$version.tar.lz)
 
build() {

cd $name-$version
./configure --prefix=/usr \
--sysconfdir=/etc \
--docdir=/usr/share/$name-$version
make

make DESTDIR=$PKG install
}
