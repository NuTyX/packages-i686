description="GNOME file manager"
url="http://live.gnome.org/Nautilus"

packager="tnut <tnut@nutyx.org>"
contributors="Fanch, jayce, Remy"

run=(desktop-file-utils gtk-update-icon-cache tracker-miners
     shared-mime-info)
makedepends=(gnome-autoar libnotify gnome-desktop tracker
             gobject-introspection exempi libexif libgexiv2
             gvfs meson gtk-doc)
set=(gnome)

name=nautilus
version=3.34.1


source=(https://ftp.gnome.org/pub/gnome/sources/$name/${version:0:4}/$name-$version.tar.xz)

build() {
  cd $name-$version
  mkdir -p build
  cd build
  meson --prefix=/usr  \
    --sysconfdir=/etc \
    -Denable-packagekit=false \
    -Denable-exif=true \
    -Denable-xmp=true \
    -Denable-gtk-doc=true \
    -Denable-selinux=false \
    -Denable-nst-extension=false 
  ninja
  DESTDIR=$PKG ninja install
}
