description="A user friendly IRC client for KDE"
url="http://konversation.kde.org"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=konversation
version=1.7.5
makedepends=(kwallet knotifications knotifyconfig kemoticons kparts kidletime
             hicolor-icon-theme extra-cmake-modules kdoctools)

source=(http://download.kde.org/stable/$name/$version/src/$name-$version.tar.xz)

prepare() {
sed -i  '/#include <QFile>/a #include <QMetaMethod>' \
 $name-$version/src/irc/outputfilter.cpp
}

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | sed "s@ @@g" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
