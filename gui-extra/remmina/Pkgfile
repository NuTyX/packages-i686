description="Remote desktop client written in GTK+"
url="https://github.com/FreeRDP/Remmina/"

contributors="Rems"
packager="tnut <tnut@nutyx.org>"

makedepends=(gtk3 zlib libjpeg-turbo libssh avahi vte3
             libgcrypt xorg-libxdmcp libsecret webkitgtk
             intltool pkg-config cmake libgnome-keyring
             xorg-libxkbfile freerdp telepathy-glib
             libvncserver json-glib spice-gtk spice-protocol)
 
name=remmina
version=1.3.2

PKGMK_KEEP_SOURCES="no"
source=(https://github.com/FreeRDP/Remmina/archive/v$version.tar.gz)

build() {

cd Remmina-$version

cmake \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=/usr/lib \
    -DWITH_AVAHI=OFF \
    -DWITH_APPINDICATOR=OFF .

  make
  make DESTDIR=$PKG install
}
