# Depends on: icu ninja meson lsb-release libwnck avahi gcr iso-codes libgnome-keyring libnotify json-glib webkitgtk nss gnome-desktop libdazzle gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache

description="A GNOME web browser based on the WebKit rendering engine."
url="http://www.gnome.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Tnut, Jayce, Remy, Fanch"
run=(adwaita-icon-theme gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache)

name=epiphany
version=3.32.2

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version:0:4}/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd    build
meson --prefix=/usr -Ddistributor_name=NuTyX -Dunit_tests=disabled
ninja
DESTDIR=$PKG ninja install
}
