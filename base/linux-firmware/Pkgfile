description="The linux kernel firmware set of files. More and more hardware requires this package"

packager="tnut <tnut@nutyx.org>"

name=linux-firmware
version=20200916

unset MAKEFLAGS

source=(http://download.tuxfamily.org/nutyx/files/$name-$version.tar.bz2)

build() {
mkdir $PKG/lib
cp -a $name-$version/ \
$PKG/lib/firmware

}
