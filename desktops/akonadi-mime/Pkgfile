description="Akonadi mime "
url="https://projects.kde.org/kdepimlibs"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"
makedepends=(shared-mime-info extra-cmake-modules boost kcodecs akonadi
             kdelibs4support kio kcompletion kcodecs phonon-qt kcontacts
             kcalcore kmime ki18n kitemviews kconfig solid qtbase kldap
             kmbox grantlee-qt)
run=(shared-mime-info)

set=(kde5 plasma5)

name=akonadi-mime
version=19.08.2

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | sed "s@</title>@@" | \
sed "s@v@@" | sed "s@ @@g" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}

