description="A tool to customize advanced GNOME 3 options"
url="https://live.gnome.org/GnomeTweakTool"
packager="tnut <tnut@nutyx.org>"
contributors="Tnut, Jayce"
makedepends=(gtk3 gconf python-gobject python2-gobject gsettings-desktop-schemas
             desktop-file-utils gtk-update-icon-cache meson)
run=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache
     python-gobject python2-gobject)

set=(gnome-extra)

name=gnome-tweaks
version=3.32.0
release=2
source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version:0:4}/$name-$version.tar.xz)

build=meson
