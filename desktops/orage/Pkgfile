description="Calendar for Xfce"
url="http://www.xfce.org/projects/orage/"

packager="tnut <tnut@nutyx.org>"
contributors="Tyrry, Greg"

makedepends=(libxfce4util libxfce4ui exo intltool
             xfce4-panel libnotify)
set=(xfce4-extra)

name=orage
version=4.12.1
release=4

source=(libical3.patch
	http://archive.xfce.org/src/apps/${name}/${version%.*}/${name}-$version.tar.bz2)

build() {

cd ${name}-$version

patch -Np1 -i ../libical3.patch

./configure --prefix=/usr \
--sysconfdir=/etc
make
make DESTDIR=$PKG install
}
